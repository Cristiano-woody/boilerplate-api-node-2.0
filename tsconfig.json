{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2017",
    /* Modules */
    "module": "commonjs",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
    
  }, 
  "include": [
    "src/**/*.ts"
  ]
}
